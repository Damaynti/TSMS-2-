                        </DataGrid>
                        <StackPanel Grid.Row="2" Margin="10">
                            <TextBlock Text="Общая сумма продаж:" VerticalAlignment="Center" />
                            <TextBox Text="{Binding TotalSum, Mode=OneWay, StringFormat=N0}" Margin="0,5,0,10" IsReadOnly="True" />
